<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    <div class="item active">
      <div class='inner-item'>
        <%= image_tag("close_up_keys.jpg") %>
      </div>
    </div>
    <div class="item">
      <div class='inner-item'>
        <%= image_tag("floating_notes.jpg") %>
      </div>
    </div>
    <div class="item">
      <div class='inner-item'>
        <%= image_tag("metal_notes.jpg") %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="span4">
      <h2><%= link_to "Pianist", @pianist %></h2>
        <%= link_to (image_tag @pianist_image_url, class: "img-circle float-left"), @pianist %>
        <p><%= @pianist.my_story %></p>
        <p>
          <%= button_to "View details >>", @pianist, class: 'btn float-left', method: :get %>
        </p>
    </div>
    <div class="span4">
      <h2><%= link_to "Accompanist", @accompanist %></h2>
        <%= link_to (image_tag @accompanist_image_url, class: "img-circle float-left"), @accompanist %>
        <p><%= @accompanist.my_story %></p>
        <p>
          <%= button_to "View details >>", @accompanist, class: 'btn float-left', method: :get %>
        </p>
    </div>
    <div class="span4">
      <h2><%= link_to "Teacher", @teacher %></h2>
        <%= link_to (image_tag @teacher_image_url, class: "img-circle float-left"), @teacher %>
        <p><%= @teacher.my_story %></p>
        <p>
          <%= button_to "View details >>", @teacher, class: 'btn float-left', method: :get %>
        </p>
    </div>
  </div>
</div>

